#include "Turboc.h"
#include <math.h>

typedef struct Player {
	int x;
	int y;
	int hp;

} Player;

typedef struct Monster {
	int x;
	int y;
	int time;
	int spawn;
} Monster;

typedef struct Star {
	int x;
	int y;
}Star;

int randomCheck(int object) {
	int arr[3] = { 0 , 4 , 5 };
	int i;
	for (i = 0; i < 3; i++) {
		if (arr[i] == object) {
			return 1;
		}
	}
	return 0;
}
int colCheck(int object) { //�浹üũ
	int arr[1] = { 0 };
	int i;
	for (i = 0; i < 2; i++) {
		if (arr[i] == object) {
			return 1;
		}
	}
	return 0;
}


int main_window() {										// ���� ȭ��
	char ch;
	while (1) {
		gotoxy(45, 15);
		printf("������ �����Ͻðڽ��ϱ�? (y or n)\n");
		if (_kbhit()) {
			ch = _getch();
			if (ch == 0xE0 || ch == 0) {
				_getch();
			}
			else {
				switch (ch) {
				case 'Y':
				case 'y':
					return 1;
					clrscr();
					break;
				case 'N':
				case 'n':
					return 0;
					clrscr();
					break;
				}
			}
		}

	}

}

